{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "lib": ["DOM", "ESNext"],
    "paths": {
      "@database/*": ["./packages/database/*"],
      "@shared/*": ["./packages/shared/*"],
      "@/*": ["./src/*"],
      "~/*": ["./*"]
    }
  },
  "include": ["./**/*.js", "./**/*.vue"],
  "exclude": ["node_modules", "dist"]
}
